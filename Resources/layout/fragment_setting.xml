<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:id="@+id/mylinear"
    android:alpha="0"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >


    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar1"
        android:layoutDirection="rtl"
        android:background="@drawable/toolbar_back"
        app:title="تنظیمات"
        app:titleTextColor="@android:color/black"
        android:layout_width="match_parent"
        android:layout_height="?android:attr/actionBarSize"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/scrollView1">

        <LinearLayout
            android:id="@+id/linearLayout1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <androidx.cardview.widget.CardView
                android:id="@+id/cardView1"
                android:padding="8dp"
                app:cardBackgroundColor="@android:color/white"
                android:elevation="0dp"
                app:cardCornerRadius="20dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_width="match_parent"
                android:layout_height="49.5dp"
                android:layout_marginTop="11.5dp"
                android:layout_marginBottom="5.0dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:textSize="15dp"
                        android:id="@+id/textView1"
                        android:textColor="#000"
                        android:layout_alignParentRight="true"
                        android:text="ظاهر برنامه"
                        android:layout_centerVertical="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="15.5dp" />

                    <Spinner
                        android:id="@+id/spinner1"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:layout_width="164.5dp"
                        android:layout_height="31.0dp"
                        android:layout_marginLeft="12.5dp" />


                </RelativeLayout>


            </androidx.cardview.widget.CardView>


            <androidx.cardview.widget.CardView
                android:id="@+id/cardView4"
                android:padding="8dp"
                app:cardBackgroundColor="@android:color/white"
                android:elevation="0dp"
                app:cardCornerRadius="20dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_width="match_parent"
                android:layout_height="49.5dp"
                android:layout_marginTop="11.5dp"
                android:layout_marginBottom="5.0dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:textSize="15dp"
                        android:id="@+id/textView4"
                        android:textColor="#000"
                        android:layout_alignParentRight="true"
                        android:text="دریافت اعلان نسخه 3.0 - 3.1"
                        android:layout_centerVertical="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="15.5dp" />

                    <Switch
                        android:id="@+id/switch2"
                        android:layout_centerVertical="true"
                        android:layout_alignParentLeft="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15.0dp" />

                </RelativeLayout>


            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/cardView5"
                android:padding="8dp"
                app:cardBackgroundColor="@android:color/white"
                android:elevation="0dp"
                app:cardCornerRadius="20dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_width="match_parent"
                android:layout_height="49.5dp"
                android:layout_marginTop="11.5dp"
                android:layout_marginBottom="5.0dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:textSize="15dp"
                        android:id="@+id/textView5"
                        android:textColor="#000"
                        android:layout_alignParentRight="true"
                        android:text="درباره برنامه"
                        android:layout_centerVertical="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="15.5dp" />

                    <com.google.android.material.button.MaterialButton
                        android:textSize="12dp"
                        app:cornerRadius="20dp"
                        android:id="@+id/mybutton3"
                        android:text="مطالعه"
                        android:layout_centerVertical="true"
                        android:layout_alignParentLeft="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15.0dp" />

                </RelativeLayout>


            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/cardView6"
                android:padding="8dp"
                app:cardBackgroundColor="@android:color/white"
                android:elevation="0dp"
                app:cardCornerRadius="20dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_width="match_parent"
                android:layout_height="49.5dp"
                android:layout_marginTop="11.5dp"
                android:layout_marginBottom="5.0dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:textSize="15dp"
                        android:id="@+id/textView6"
                        android:textColor="#000"
                        android:layout_alignParentRight="true"
                        android:text="به اشتراک گذاری"
                        android:layout_centerVertical="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="15.5dp" />

                    <com.google.android.material.button.MaterialButton
                        android:textSize="12dp"
                        app:cornerRadius="20dp"
                        android:id="@+id/mybutton4"
                        android:text="اشتراک"
                        android:layout_centerVertical="true"
                        android:layout_alignParentLeft="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15.0dp" />

                </RelativeLayout>


            </androidx.cardview.widget.CardView>

            
            <androidx.cardview.widget.CardView
                android:id="@+id/cardView7"
                android:padding="8dp"
                app:cardBackgroundColor="@android:color/white"
                android:elevation="0dp"
                app:cardCornerRadius="20dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_width="match_parent"
                android:layout_height="49.5dp"
                android:layout_marginTop="11.5dp"
                android:layout_marginBottom="5.0dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:textSize="15dp"
                        android:id="@+id/textView7"
                        android:textColor="#000"
                        android:layout_alignParentRight="true"
                        android:text="کمک به توسعه"
                        android:layout_centerVertical="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="15.5dp" />

                    <com.google.android.material.button.MaterialButton
                        android:textSize="12dp"
                        app:cornerRadius="20dp"
                        android:id="@+id/mybutton5"
                        android:text="نظر دادن"
                        android:layout_centerVertical="true"
                        android:layout_alignParentLeft="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15.0dp" />

                </RelativeLayout>


            </androidx.cardview.widget.CardView>




        </LinearLayout>

    </ScrollView>

</LinearLayout>
