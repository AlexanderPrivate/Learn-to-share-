<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

        <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar1"
        android:layoutDirection="rtl"
        android:background="@drawable/toolbar_back"
        app:title="آموزش زامارین اندروید"
        app:titleTextColor="@android:color/black"
        android:layout_width="match_parent"
        android:layout_height="?android:attr/actionBarSize"/>

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView1"
        android:layout_marginRight="10sp"
        android:layout_marginLeft="10sp"
        app:cardCornerRadius="10sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10.3dp"
        android:layout_marginBottom="5.3dp">

        <TextView
            android:layout_margin="10sp"
            android:text="این دوره آموزشی هنوز تکمیل نیست و به زودی در آپدیت های مستمر کامل تر میکنیم این دوره توسط سازنده برنامه آموزش داده شده است."
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    </androidx.cardview.widget.CardView>

    <androidx.recyclerview.widget.RecyclerView
        android:layout_marginTop="5sp"
        android:id="@+id/recyclerView1"
        android:scrollbars="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>


</LinearLayout>
