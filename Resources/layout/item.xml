<?xml version="1.0" encoding="utf-8"?>

<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@id/cardView1"
    android:layout_margin="4sp"
    app:cardCornerRadius="10dp"
    app:cardElevation="2dp"
    app:contentPadding="5dp"
    android:layout_width="match_parent"
    android:layout_height="140.0dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/imageView1"
            android:padding="5dp"
            android:src="@drawable/csharp_image"
            android:scaleType="fitCenter"
            android:layout_alignParentLeft="true"
            android:layout_width="110.5dp"
            android:layout_height="match_parent"/>

        <TextView
            android:textColor="@android:color/black"
            android:textSize="17dp"
            android:id="@+id/textTitle"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:text="قسمت اول"
            android:layout_marginTop="8.0dp"
            android:layout_marginRight="10dp"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/textDescreption"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/textTitle"
            android:text="مقدمه و آشنایی با مدرس"
            android:layout_marginRight="10dp"
            android:layout_marginTop="8dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <com.google.android.material.button.MaterialButton
            android:textSize="12dp"
            android:textColor="@android:color/white"
            app:cornerRadius="15dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/showbutton"
            android:layout_marginRight="9.5dp"
            android:text="پخش آنلاین" />

        <com.google.android.material.button.MaterialButton
            android:textSize="12dp"
            android:textColor="@android:color/white"
            app:cornerRadius="15dp"
            android:layout_toLeftOf="@+id/showbutton"
            android:id="@+id/downloadbutton"
            android:layout_alignParentBottom="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="12dp"
            android:text="دانلود" />

    </RelativeLayout>

</androidx.cardview.widget.CardView>

