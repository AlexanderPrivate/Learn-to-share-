<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/mylinear">

    <androidx.appcompat.widget.Toolbar
        android:layout_alignParentTop="true"
        android:id="@+id/toolbar1"
        android:layoutDirection="rtl"
        android:background="@drawable/toolbar_back"
        app:title="پخش آهنگ"
        app:titleTextColor="@android:color/black"
        android:layout_width="match_parent"
        android:layout_height="?android:attr/actionBarSize"/>


    <androidx.cardview.widget.CardView
        app:cardCornerRadius="40sp"
        android:id="@+id/cardView1"
        android:layout_centerInParent="true"
        android:layout_width="match_parent"
        android:layout_height="232.0dp"
        android:layout_marginBottom="16.7dp"
        android:layout_marginTop="12.3dp"
        android:layout_marginRight="143.3dp">

        <ImageView
            android:scaleType="centerCrop"
            android:src="@drawable/image_17"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

    </androidx.cardview.widget.CardView>

    <TextView
        android:layout_below="@+id/cardView1"
        android:textSize="15sp"
        android:textStyle="bold"
        android:layout_centerInParent="true"
        android:text="موزیک پلیر Ap"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>


    <androidx.cardview.widget.CardView
        android:layout_margin="20sp"
        android:id="@+id/card1"
        app:cardElevation="5sp"
        app:cardCornerRadius="20sp"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="72.0dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="10sp"
                android:id="@+id/floatingActionButton1"
                app:fabCustomSize="50sp"
                android:src="@drawable/stop"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <androidx.appcompat.widget.AppCompatSeekBar
                android:id="@+id/appCompatSeekBar1"
                android:layout_margin="10sp"
                android:layout_toLeftOf="@+id/floatingActionButton1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="3.0dp" />

            <TextView
                android:id="@+id/text_name"
                android:layout_marginLeft="18.7dp"
                android:text="Hello World!"
                android:layout_below="@+id/appCompatSeekBar1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>


        </RelativeLayout>


    </androidx.cardview.widget.CardView>

</RelativeLayout>
