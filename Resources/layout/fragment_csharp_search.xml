<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/mylinear"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/scrollView1">

        <LinearLayout
            android:id="@+id/linearLayout1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <androidx.cardview.widget.CardView
                android:id="@+id/cardView1"
                app:cardElevation="2dp"
                android:padding="8dp"
                app:cardBackgroundColor="#fff"
                app:cardCornerRadius="20dp"
                android:layout_marginLeft="7dp"
                android:layout_marginRight="7dp"
                android:layout_width="match_parent"
                android:layout_height="225.0dp"
                android:layout_marginTop="11.5dp"
                android:layout_marginBottom="5.0dp">

                <RelativeLayout
                    android:id="@+id/relativeLayout1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <androidx.cardview.widget.CardView
                        android:id="@+id/ModeCard1"
                        app:cardCornerRadius="2dp"
                        android:layout_marginRight="0dp"
                        android:layout_centerVertical="true"
                        android:layout_alignParentRight="true"
                        app:cardBackgroundColor="#009dff"
                        android:layout_width="5dp"
                        android:layout_height="35dp"/>

                    <ImageView
                        android:src="@drawable/image_xamarinform"
                        android:scaleType="fitCenter"
                        android:padding="10dp"
                        android:layout_width="163.5dp"
                        android:layout_height="match_parent"
                        android:layout_alignParentLeft="true"/>

                    <TextView
                        android:textColor="@android:color/black"
                        android:textSize="15dp"
                        android:id="@+id/textView1"
                        android:text="آموزش زامارین فرم"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="13.0dp"
                        android:layout_marginTop="32.5dp" />


                    <TextView
                        android:textColor="@android:color/black"
                        android:textSize="12dp"
                        android:id="@+id/textView2"
                        android:layout_width="193.0dp"
                        android:padding="3dp"
                        android:text="یک فریمورک چند پلتفرمی برای توسعه برنامه‌های موبایل و اپل و ویندوز فون است با استفاده از کدنویسی یکبار برای هر سه پلتفرم میتوانید خروجی بگیرید"
                        android:layout_marginRight="13.0dp"
                        android:layout_alignParentRight="true"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/textView1"
                        android:layout_marginTop="5.0dp"
                        android:layout_above="@id/materialButton1" />

                    <com.google.android.material.button.MaterialButton
                        app:iconSize="17dp"
                        app:iconTint="@android:color/white"
                        app:icon="@drawable/play"
                        android:textSize="12dp"
                        android:id="@+id/materialButton1"
                        app:cornerRadius="20dp"
                        android:layout_marginRight="33.5dp"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentBottom="true"
                        android:layout_width="121.0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="0.0dp"
                        android:text="شروع دوره"
                        android:layout_marginBottom="6.0dp" />

                </RelativeLayout>


            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/cardView2"
                app:cardElevation="2dp"
                android:padding="8dp"
                app:cardBackgroundColor="#fff"
                app:cardCornerRadius="20dp"
                android:layout_marginLeft="7dp"
                android:layout_marginRight="7dp"
                android:layout_width="match_parent"
                android:layout_height="225.0dp"
                android:layout_marginTop="11.5dp"
                android:layout_marginBottom="5.0dp">

                <RelativeLayout
                    android:id="@+id/relativeLayout1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <androidx.cardview.widget.CardView
                        android:id="@+id/ModeCard2"
                        app:cardCornerRadius="2dp"
                        android:layout_marginRight="0dp"
                        android:layout_centerVertical="true"
                        android:layout_alignParentRight="true"
                        app:cardBackgroundColor="#009dff"
                        android:layout_width="5dp"
                        android:layout_height="35dp"/>

                    <ImageView
                        android:src="@drawable/image_xamarinandroid"
                        android:scaleType="fitCenter"
                        android:padding="10dp"
                        android:layout_width="163.5dp"
                        android:layout_height="match_parent"
                        android:layout_alignParentLeft="true"/>

                    <TextView
                        android:textColor="@android:color/black"
                        android:textSize="15dp"
                        android:id="@+id/textView3"
                        android:text="آموزش زامارین اندروید"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="13.0dp"
                        android:layout_marginTop="32.5dp" />


                    <TextView
                        android:textColor="@android:color/black"
                        android:textSize="12dp"
                        android:id="@+id/textView4"
                        android:layout_width="193.0dp"
                        android:padding="3dp"
                        android:text=" یک چارچوب توسعه نرم‌افزار موبایل است که به توسعه‌دهندگان امکان می‌دهد با استفاده از زبان برنامه‌نویسی سی شارپ، برنامه‌های اندروید را توسعه دهند."
                        android:layout_marginRight="13.0dp"
                        android:layout_alignParentRight="true"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/textView3"
                        android:layout_marginTop="5.0dp"
                        android:layout_above="@id/materialButton2" />

                    <com.google.android.material.button.MaterialButton
                        app:iconSize="17dp"
                        app:iconTint="@android:color/white"
                        app:icon="@drawable/play"
                        android:textSize="12dp"
                        android:id="@+id/materialButton2"
                        app:cornerRadius="20dp"
                        android:layout_marginRight="33.5dp"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentBottom="true"
                        android:layout_width="121.0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="0.0dp"
                        android:text="شروع دوره"
                        android:layout_marginBottom="6.0dp" />

                </RelativeLayout>


            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/cardView3"
                android:padding="8dp"
                app:cardElevation="1dp"
                app:cardCornerRadius="20dp"
                android:layout_marginLeft="7dp"
                android:layout_marginRight="7dp"
                android:layout_width="match_parent"
                android:layout_height="225.0dp"
                android:layout_marginTop="11.5dp"
                android:layout_marginBottom="15.0dp">

                <RelativeLayout
                    android:id="@+id/relativeLayout8"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <androidx.cardview.widget.CardView
                        android:id="@+id/ModeCard3"
                        app:cardCornerRadius="2dp"
                        android:layout_marginRight="0dp"
                        android:layout_centerVertical="true"
                        android:layout_alignParentRight="true"
                        app:cardBackgroundColor="#009dff"
                        android:layout_width="5dp"
                        android:layout_height="35dp"/>

                    <ImageView
                        android:src="@drawable/image_last2"
                        android:scaleType="fitCenter"
                        android:padding="10dp"
                        android:layout_width="163.5dp"
                        android:layout_height="match_parent"
                        android:layout_alignParentLeft="true"/>

                    <TextView
                        android:textColor="@android:color/black"
                        android:textSize="15dp"
                        android:id="@+id/textView5"
                        android:text="آموزش ویندوز فرم"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="13.0dp"
                        android:layout_marginTop="32.5dp" />


                    <TextView
                        android:textColor="@android:color/black"
                        android:textSize="12dp"
                        android:id="@+id/textView6"
                        android:layout_width="193.0dp"
                        android:padding="3dp"
                        android:text="ویندوز فرم تکنولوژی ساخت برنامه های گرافیکی تحت دسکتاپ است این تکنولوژی به شما کمک میکند تا برنامه های ویندوزی بسازید!"
                        android:layout_marginRight="13.0dp"
                        android:layout_alignParentRight="true"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/textView5"
                        android:layout_marginTop="5.0dp"
                        android:layout_above="@id/materialButton3" />

                    <com.google.android.material.button.MaterialButton
                        app:iconSize="17dp"
                        app:iconTint="@android:color/white"
                        app:icon="@drawable/play"
                        android:textSize="12dp"
                        android:id="@+id/materialButton3"
                        app:cornerRadius="20dp"
                        android:layout_marginRight="33.5dp"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentBottom="true"
                        android:layout_width="121.0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="0.0dp"
                        android:text="شروع دوره"
                        android:layout_marginBottom="6.0dp" />

                </RelativeLayout>


            </androidx.cardview.widget.CardView>


            <androidx.cardview.widget.CardView
                android:padding="8dp"
                app:cardElevation="1dp"
                app:cardCornerRadius="20dp"
                android:id="@+id/cardView4"
                android:layout_marginLeft="7dp"
                android:layout_marginRight="7dp"
                android:layout_width="match_parent"
                android:layout_height="225.0dp"
                android:layout_marginTop="11.5dp"
                android:layout_marginBottom="5.0dp">

                <RelativeLayout
                    android:id="@+id/relativeLayout6"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <androidx.cardview.widget.CardView
                        android:id="@+id/ModeCard4"
                        app:cardCornerRadius="2dp"
                        android:layout_marginRight="0dp"
                        android:layout_centerVertical="true"
                        android:layout_alignParentRight="true"
                        app:cardBackgroundColor="#009dff"
                        android:layout_width="5dp"
                        android:layout_height="35dp"/>

                    <ImageView
                        android:src="@drawable/image_last1"
                        android:scaleType="fitCenter"
                        android:padding="10dp"
                        android:layout_width="163.5dp"
                        android:layout_height="match_parent"
                        android:layout_alignParentLeft="true"/>

                    <TextView
                        android:textColor="@android:color/black"
                        android:textSize="15dp"
                        android:id="@+id/textView7"
                        android:text="دوره سی شارپ مقدماتی تا متوسط"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="13.0dp"
                        android:layout_marginTop="32.5dp" />


                    <TextView
                        android:textColor="@android:color/black"
                        android:textSize="12dp"
                        android:id="@+id/textView8"
                        android:layout_width="193.0dp"
                        android:padding="3dp"
                        android:layout_marginRight="13.0dp"
                        android:layout_alignParentRight="true"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/textView7"
                        android:layout_marginTop="5.0dp"
                        android:text="سی شارپ یک زبان مدرن ، شی گرا ، چند منظوره است که با یادگیری آن میتوان هر برنامه ای برای هر دستگاهی نوشت و یادگیری آن هم بسیار آسان است!"
                        android:layout_above="@id/materialButton4" />

                    <com.google.android.material.button.MaterialButton
                        app:iconSize="17dp"
                        app:iconTint="@android:color/white"
                        app:icon="@drawable/play"
                        android:textSize="12dp"
                        android:id="@+id/materialButton4"
                        app:cornerRadius="20dp"
                        android:layout_marginRight="33.5dp"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentBottom="true"
                        android:layout_width="121.0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="0.0dp"
                        android:text="شروع دوره"
                        android:layout_marginBottom="6.0dp" />

                </RelativeLayout>


            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </ScrollView>
</LinearLayout>