<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/mylinear"
    android:orientation="vertical">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar1"
        android:layoutDirection="rtl"
        android:background="@drawable/toolbar_back"
        app:title="پخش ویدیو"
        app:titleTextColor="@android:color/black"
        android:layout_width="match_parent"
        android:layout_height="?android:attr/actionBarSize"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/scrollView1">

        <LinearLayout
            android:id="@+id/linearLayout1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <android.webkit.WebView
                android:id="@+id/MyWeb"
                android:layout_margin="5dp"
                android:layout_width="match_parent"
                android:layout_height="444.5dp"
                android:layout_marginTop="0.0dp" />

            <androidx.cardview.widget.CardView
                android:id="@+id/mycard1"
                app:cardCornerRadius="10dp"
                android:layout_width="match_parent"
                android:layout_height="44.0dp"
                android:layout_marginTop="8.0dp"
                android:layout_marginRight="10.0dp"
                android:layout_marginLeft="10.0dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/materialButton1"
                        app:cornerRadius="15dp"
                        android:textSize="12dp"
                        android:text="مشاهده از وبسایت"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="15.0dp" />


                </RelativeLayout>


            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                            android:id="@+id/mycard2"
                android:layout_margin="10dp"
                app:cardCornerRadius="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="0.0dp">


                <RelativeLayout
                    android:padding="8dp"
                    android:id="@+id/relativeLayout1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <androidx.cardview.widget.CardView
                        android:id="@+id/ModelCard1"
                        app:cardCornerRadius="2dp"
                        android:layout_marginRight="0dp"
                        android:layout_centerVertical="true"
                        android:layout_alignParentRight="true"
                        app:cardBackgroundColor="#009dff"
                        android:layout_width="5dp"
                        android:layout_height="35dp"/>

                    <TextView
                        android:textSize="17dp"
                        android:id="@+id/tozihat"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="توضیحات درس"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="2.0dp"
                        />

                    <View
                        android:id="@+id/view1"
                        android:layout_centerHorizontal="true"
                        android:layout_below="@+id/tozihat"
                        android:background="@android:color/darker_gray"
                        android:layout_width="50dp"
                        android:layout_height="1dp"
                        android:layout_marginTop="3.0dp" />

                    <TextView
                        android:layout_below="@+id/tozihat"
                        android:id="@+id/textView1"
                        android:textColor="@android:color/black"
                        android:textSize="15dp"
                        android:layout_marginTop="15.5dp"
                        android:layout_marginRight="20dp"
                        android:layout_alignParentRight="true"
                        android:text="مدرس : "
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                    <TextView
                        android:layout_below="@+id/tozihat"
                        android:id="@+id/textView2"
                        android:textColor="@android:color/black"
                        android:layout_marginTop="15.5dp"
                        android:layout_marginLeft="20dp"
                        android:layout_alignParentLeft="true"
                        android:text="محمدرضا محمدزادگان"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                    <TextView
                        android:id="@+id/textView3"
                        android:textColor="@android:color/black"
                        android:layout_below="@id/textView1"
                        android:textSize="15dp"
                        android:layout_marginTop="20dp"
                        android:layout_marginRight="20dp"
                        android:layout_alignParentRight="true"
                        android:text="مدت زمان :"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                    <TextView
                        android:layout_below="@+id/textView2"
                        android:id="@+id/textView4"
                        android:textColor="@android:color/black"
                        android:layout_marginTop="20dp"
                        android:layout_marginLeft="20dp"
                        android:layout_alignParentLeft="true"
                        android:text="76 دقیقه"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                    <TextView
                        android:id="@+id/textView5"
                        android:textColor="@android:color/black"
                        android:layout_below="@id/textView3"
                        android:textSize="15dp"
                        android:layout_marginTop="20dp"
                        android:layout_marginRight="20dp"
                        android:layout_alignParentRight="true"
                        android:text="وضعیت اینترنت :"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                    <TextView
                        android:layout_below="@+id/textView4"
                        android:id="@+id/textView6"
                        android:textColor="@android:color/black"
                        android:layout_marginTop="20dp"
                        android:layout_marginLeft="20dp"
                        android:layout_alignParentLeft="true"
                        android:text="متصل"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                </RelativeLayout>

            </androidx.cardview.widget.CardView>


            <androidx.cardview.widget.CardView
                android:id="@+id/mycard3"
android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                app:cardCornerRadius="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="15.5dp">



                <RelativeLayout
                    android:padding="8dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <androidx.cardview.widget.CardView
                    
                        android:id="@+id/ModelCard2"
                        app:cardCornerRadius="2dp"
                        android:layout_marginRight="0dp"
                        android:layout_centerVertical="true"
                        android:layout_alignParentRight="true"
                        app:cardBackgroundColor="#009dff"
                        android:layout_width="5dp"
                        android:layout_height="35dp"/>

                    <TextView
                        android:textSize="17dp"
                        android:id="@+id/tozihat2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="توضیحات دوره"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="2.0dp"
                        />

                    <View
                        android:id="@+id/view2"
                        android:layout_centerHorizontal="true"
                        android:layout_below="@+id/tozihat2"
                        android:background="@android:color/darker_gray"
                        android:layout_width="50dp"
                        android:layout_height="1dp"
                        android:layout_marginTop="3.0dp" />

                    <TextView
                        android:id="@+id/textView7"
                        android:layout_below="@+id/view2"
                        android:text="زبان های برنامه نویسی زیادی وجود دارد. هرکسی با توجه به حوزه ای که انتخاب کرده است، باید یکی از این زبان ها را انتخاب کند و شروع به یادگیری کند. یکی از کاربردی ترین و پرتقاضا ترین زبان های برنامه نویسی، جاوا است. برای یادگیری این زبان برنامه نویسی و رسیدن به مقصد، نیاز به یک نقشه راه جاوا دارید."
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="12.5dp"
                        android:layout_marginRight="20.0dp" 
                       />

                </RelativeLayout>

            </androidx.cardview.widget.CardView>

        </LinearLayout>

    </ScrollView>
</LinearLayout>