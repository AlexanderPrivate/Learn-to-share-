<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/linearLayout1"
    android:orientation="vertical"
    >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/scrollView1">

        <RelativeLayout
            android:id="@+id/linearLayout1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.google.android.material.button.MaterialButton
                app:iconSize="17dp"
                app:iconTint="@android:color/white"
                app:icon="@drawable/update"
                app:cornerRadius="15dp"
                android:id="@+id/btnUpdate"
                android:text="بروز رسانی"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginTop="14.0dp"
                android:layout_marginRight="18.5dp" />

            <androidx.cardview.widget.CardView
                android:id="@+id/cardView1"
                app:contentPadding="5dp"
                app:cardElevation="2dp"
                app:cardBackgroundColor="@android:color/white"
                app:cardCornerRadius="20dp"
                android:layout_below="@+id/btnUpdate"
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:layout_marginRight="14.0dp"
                android:layout_marginLeft="14.0dp"
                android:layout_marginTop="7.0dp"
                android:layout_marginBottom="10dp">

                <TextView
                    android:padding="10dp"
                    android:id="@+id/textView4"
                    android:textIsSelectable="true"
                    android:text="اعلان های نسخه 4.0 و بالاتر"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/cardView2"
                android:layout_below="@+id/cardView1"
                android:padding="8dp"
                app:cardBackgroundColor="@android:color/white"
                android:elevation="0dp"
                app:cardCornerRadius="20dp"
                android:layout_marginRight="14.0dp"
                android:layout_marginLeft="14.0dp"
                android:layout_width="match_parent"
                android:layout_height="49.5dp"
                android:layout_marginBottom="0.0dp">

                <RelativeLayout
                    android:id="@+id/relativeLayout1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <com.google.android.material.button.MaterialButton
                        app:iconSize="17dp"
                        app:iconTint="@android:color/white"
                        app:icon="@drawable/support"
                        app:cornerRadius="15dp"
                        android:id="@+id/btnRead"
                        android:text="خواندن"
                        android:layout_centerVertical="true"
                        android:layout_width="wrap_content"
                        android:layout_height="44.0dp"
                        android:layout_alignParentLeft="true"
                        android:layout_marginLeft="24.0dp" />


                    <TextView
                        android:textColor="@android:color/black"
                        android:textSize="15dp"
                        android:layout_alignParentRight="true"
                        android:id="@+id/textView2"
                        android:textIsSelectable="true"
                        android:text="درباره تیم سازنده"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="24.0dp" />

                </RelativeLayout>


            </androidx.cardview.widget.CardView>



            <androidx.cardview.widget.CardView
            
                android:id="@+id/cardView4"
                app:contentPadding="5dp"
                app:cardElevation="2dp"
                app:cardBackgroundColor="@android:color/white"
                app:cardCornerRadius="20dp"
                android:layout_below="@+id/cardView2"
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:layout_marginRight="14.0dp"
                android:layout_marginLeft="14.0dp"
                android:layout_marginTop="10.0dp"
                android:layout_marginBottom="100.5dp">

                <TextView
                    android:padding="10dp"
                    android:id="@+id/textView1"
                    android:textIsSelectable="true"
                    android:text="اعلان های نسخه 3.1 - 3.0"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>

            </androidx.cardview.widget.CardView>



        </RelativeLayout>

    </ScrollView>

</LinearLayout>